<?xml version="1.0" encoding="utf-8"?>
<resources >
    <declare-styleable name="HorizontalTextView" >
        <!--左边文字内容-->
        <attr name="htvStartText" format="string" />
        <!--左边字体大小-->
        <attr name="htvStartTextSize" format="dimension" />
        <!--左边字体颜色-->
        <attr name="htvStartTextColor" format="color" />
        <!--左边字体大小-->
        <attr name="htvStartTextWidth" format="dimension" />
        <!--字体是否加粗-->
        <attr name="htvStartTextBold" format="boolean" />

        <!--文字和文字的距离-->
        <attr name="htvTextPaddingText" format="dimension" />

        <!--右边文字内容-->
        <attr name="htvEndText" format="string" />
        <!--右边字体大小-->
        <attr name="htvEndTextSize" format="dimension" />
        <!--右边字体颜色-->
        <attr name="htvEndTextColor" format="color" />
        <!--右边字体大小-->
        <attr name="htvEndTextWidth" format="dimension" />
        <!--字体是否加粗-->
        <attr name="htvEndTextBold" format="boolean" />
        <!--文字是否单行显示 true 加省略号 false-->
        <attr name="htvEndTextSingle" format="boolean" />
        <!--右边文字对齐方式-->
        <attr name="htvEndTextGravity" format="enum" >
            <!--左对齐-->
            <enum name="left" value="1" />
            <!--右对齐-->
            <enum name="right" value="2" />
        </attr >
        <!--右边文字对齐方式-->
        <attr name="htvTextGravity" format="enum" >
            <!--居中对齐-->
            <enum name="center" value="1" />
            <!--顶部对齐-->
            <enum name="top" value="2" />
        </attr >
    </declare-styleable >

    <declare-styleable name="CommonItemView">
        <!--左边图片-->
        <attr name="civStartDrawable" format="reference|color" />
        <!--图片距文字的距离-->
        <attr name="civDrawablePaddingText" format="dimension" />
        <!--左边图片宽-->
        <attr name="civStartDrawableWidth" format="dimension" />
        <!--左边图片高-->
        <attr name="civStartDrawableHeight" format="dimension" />
        <!--右边图片-->
        <attr name="civEndDrawable" format="reference|color" />
        <!--图片距文字的距离-->
        <attr name="civTextPaddingDrawable" format="dimension" />
        <!--右边图片宽-->
        <attr name="civEndDrawableWidth" format="dimension" />
        <!--右边图片高-->
        <attr name="civEndDrawableHeight" format="dimension" />
        <!--内边距-->
        <attr name="civSpaceStart" format="dimension" />
        <attr name="civSpaceEnd" format="dimension" />
        <attr name="civSpaceTop" format="dimension" />
        <attr name="civSpaceBottom" format="dimension" />
        <attr name="civSpaceHorizontal" format="dimension" />
        <attr name="civSpaceVertical" format="dimension" />
        <!--文字内容-->
        <attr name="civTopText" format="string" />
        <!--字体大小-->
        <attr name="civTopTextSize" format="dimension" />
        <!--字体颜色-->
        <attr name="civTopTextColor" format="color" />
        <!--文字和文字的距离-->
        <attr name="civTextPaddingText" format="dimension" />
        <!--文字内容-->
        <attr name="civBottomText" format="string" />
        <!--字体大小-->
        <attr name="civBottomTextSize" format="dimension" />
        <!--字体颜色-->
        <attr name="civBottomTextColor" format="color" />
        <!--按压时的背景颜色-->
        <attr name="civPressedColor" format="reference|color" />
        <!--字体是否加粗-->
        <attr name="civTopTextBold" format="boolean" />
        <attr name="civBottomTextBold" format="boolean" />
        <!--是否显示圆形图片-->
        <attr name="civIsCircle" format="boolean" />
        <!--网络图片地址-->
        <attr name="civImageUrl" format="string" />
        <!--默认背景颜色-->
        <attr name="civBackgroundColor" format="reference|color" />
        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="civCorner" format="dimension" />

    </declare-styleable>
</resources >